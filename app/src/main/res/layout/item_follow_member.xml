<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <xyz.sangcomz.sangcomz_n_study.util.custom.RoundedImageView
        android:id="@+id/riv_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/default_profile2"
        app:border_color="#ffffff"
        app:border_width="1dp"
        app:corner_radius="10dp"
        app:oval="true" />

    <TextView
        android:id="@+id/txt_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="no Name"
        android:textColor="@color/colorPrimaryText" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        android:background="@color/colorFollow"
        android:text="@string/txt_add_follow" />
</LinearLayout><!--</android.support.v7.widget.CardView>-->
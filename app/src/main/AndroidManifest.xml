<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.sangcomz.open_sns">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="xyz.sangcomz.open_sns.core.common.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="xyz.sangcomz.open_sns.ui.main.MainActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.SEARCH" /> -->
            <!-- <category android:name="android.intent.category.DEFAULT" /> -->
            <!-- </intent-filter> -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="xyz.sangcomz.open_sns.ui.splash.SplashActivity"
            android:theme="@style/TranslucentStatusAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xyz.sangcomz.open_sns.ui.join.JoinActivity"
            android:theme="@style/TranslucentStatusAppTheme" />
        <activity android:name="xyz.sangcomz.open_sns.ui.post.AddPostActivity" />
        <activity
            android:name="xyz.sangcomz.open_sns.ui.comment.CommentActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity android:name="xyz.sangcomz.open_sns.ui.profile.ProfileActivity"
            android:theme="@style/OnlyTranslucentStatusAppTheme" />
    </application>

</manifest>
